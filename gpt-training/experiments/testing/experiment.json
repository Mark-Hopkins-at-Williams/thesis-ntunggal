{
    "tokenizer": {
        "name": "ChineseBPETokenizer",
        "max_vocab_size": 616,
        "max_examples": 10,
        "special_tokens": {
            "pad_token": "<pad>"
        },
        "tokenizer_files_dir": "/mnt/storage/ntunggal/tokenizer-files/pinyin-bpe",
        "vocab_file_name": "chinese_bpe.model"
    },
    "model": {
        "n_positions": 1024,
        "n_ctx": 1024,
        "n_embd": 768,
        "n_layer": 6,
        "n_head": 12,
        "activation_function": "gelu"
    },
    "training": {
        "eval_steps": 10,
        "max_steps": 30,
        "batch_size": 16,
        "learning_rate": 5e-5,
        "weight_decay": 0.01,
        "warmup_steps": 500,
        "max_grad_norm": 1
    }
}
